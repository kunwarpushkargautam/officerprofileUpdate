<!DOCTYPE html>
<html lang="en">

{{>header}}

<body>

    {{>navbar}}
    <!--Section: Contact v.2-->
    <div class="col-11 col-sm-6 col-lg-4  my-3 mx-auto shadow logbox curve p-2 border {{borderColor}}" id="warningMessage">
            <h5 class="{{textColor}} text-center " id="warningtextmessage">{{changeStatus}}</h5>
            </div>

    <div class="row mx-auto justify-content-center mt-4">
        <div class="col-11 col-md-7 col-sm-8 col-lg-5 mx-auto mt-3 logbox curve h-100 shadow py-4">

            <h3 class="text-center text-info mx-auto mb-4">Reset Your Password</h3>



            <form action="/resetPassword" method="post" onsubmit="return submitFormPass();">
                <div class="modal-body justify-content-center mx-auto w-100 ">

                    <div id="preloaderpass" class="mx-auto text-center  my-2" style="display:none;">
                        <div class="row text-center mx-auto justify-content-center">
                            <div class="col-1"><img src="../images/rundeer.gif" alt="this slowpoke moves" /></div>
                            
                        </div>
                        <p>Changing Password..</p>

                    </div>
                    
                    <div class="row my-2 py-2 mx-auto justify-content-center">
                        <div class=" col-11 col-md-5 col-lg-3 px-0">
                            <h6 class="text-secondary">Current Password</h6>
                        </div>
                        <div class="col-11 col-md-7 col-lg-6 px-0  border curve ">
                            <input type="password" class="w-100  curve border border-0" name="currentPassword" required>
                        </div>
                    </div>
                    <div class="row my-2 py-2 mx-auto justify-content-center">
                        <div class=" col-11 col-md-5 col-lg-3 px-0">
                            <h6 class="text-secondary">New Password</h6>
                        </div>
                        <div class="col-11 col-md-7 col-lg-6 px-0  border curve ">
                            <input type="password" class="w-100  curve border border-0" minlength="8" name="newPassword" required>
                        </div>
                    </div>
                    <div class="row my-2 py-2 mx-auto justify-content-center">
                        <div class=" col-11 col-md-5 col-lg-3 px-0">
                            <h6 class="text-secondary">Confirm Password</h6>
                        </div>
                        <div class="col-11 col-md-7 col-lg-6 px-0  border curve ">
                            <input type="password" class="w-100  curve border border-0" minlength="8" name="cNewPassword" required>
                        </div>
                    </div>
                </div>
                <div class="text-center justify-content-center m-1">
                    <a href="/profile"><button type="button" class="btn btn-outline-secondary"
                            data-bs-dismiss="modal">Cancel</button></a>
                    <button type="submit" class="btn btn-outline-success px-5">Reset</button>
                </div>
                <iframe name="uploadFrame" id="uploadFramepass"
                    style="width:0;height:0;margin:0;visibility:hidden;position:absolute;"></iframe>
            </form>


        </div>
    </div>

    <script>
        function submitFormPass() {
            var preloader = document.getElementById("preloaderpass");
            preloader.style.display = "block";

            var iframe = document.getElementById("uploadFramepass");
            iframe.onload = function () {
                //hide the preloader on complete
                preloader.style.display = "none";
            };

            return true;
        }
    </script>









    {{>scriptcdn}}
</body>

</html>